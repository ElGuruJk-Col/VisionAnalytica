<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.ChangePasswordPage"
             Title="Cambiar Contraseña">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30" Spacing="20">
            
            <!-- Header -->
            <Label 
                Text="Cambiar Contraseña"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <Label 
                Text="Debes cambiar tu contraseña antes de continuar"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Gray"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,30" />

            <!-- Current Password Entry -->
            <Label Text="Contraseña Actual" FontSize="14" FontAttributes="Bold" />
            <Entry 
                x:Name="CurrentPasswordEntry"
                Placeholder="Ingresa tu contraseña actual"
                IsPassword="True" />

            <!-- New Password Entry -->
            <Label Text="Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry 
                x:Name="NewPasswordEntry"
                Placeholder="Ingresa tu nueva contraseña"
                IsPassword="True" />

            <!-- Confirm Password Entry -->
            <Label Text="Confirmar Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry 
                x:Name="ConfirmPasswordEntry"
                Placeholder="Confirma tu nueva contraseña"
                IsPassword="True" />

            <!-- Error Message -->
            <Label 
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Change Password Button -->
            <Button 
                x:Name="ChangePasswordButton"
                Text="Cambiar Contraseña"
                Clicked="OnChangePasswordClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"
                HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

