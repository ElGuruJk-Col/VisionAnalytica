<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.ChangePasswordPage"
             Title="Cambiar Contraseña">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30" Spacing="20">
            
            <!-- Header -->
            <Label 
                Text="Cambiar Contraseña"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <Label 
                x:Name="InfoLabel"
                Text="Debes cambiar tu contraseña antes de continuar"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Gray"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,30" />

            <!-- Current Password Entry (solo visible si NO es contraseña temporal) -->
            <Label 
                x:Name="CurrentPasswordLabel"
                Text="Contraseña Actual" 
                FontSize="14" 
                FontAttributes="Bold"
                IsVisible="False" />
            <Grid x:Name="CurrentPasswordGrid" IsVisible="False">
                <Entry 
                    x:Name="CurrentPasswordEntry"
                    Placeholder="Ingresa tu contraseña actual"
                    IsPassword="True" />
                <Button 
                    x:Name="ToggleCurrentPasswordButton"
                    Text="●"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray600}"
                    FontSize="18"
                    HorizontalOptions="End"
                    WidthRequest="40"
                    HeightRequest="40"
                    Clicked="OnToggleCurrentPasswordClicked"
                    Margin="0,0,8,0"
                    Padding="0"
                    Opacity="0.7" />
            </Grid>

            <!-- New Password Entry -->
            <Label Text="Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Grid>
                <Entry 
                    x:Name="NewPasswordEntry"
                    Placeholder="Ingresa tu nueva contraseña"
                    IsPassword="True" />
                <Button 
                    x:Name="ToggleNewPasswordButton"
                    Text="●"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray600}"
                    FontSize="18"
                    HorizontalOptions="End"
                    WidthRequest="40"
                    HeightRequest="40"
                    Clicked="OnToggleNewPasswordClicked"
                    Margin="0,0,8,0"
                    Padding="0"
                    Opacity="0.7" />
            </Grid>

            <!-- Confirm Password Entry -->
            <Label Text="Confirmar Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Grid>
                <Entry 
                    x:Name="ConfirmPasswordEntry"
                    Placeholder="Confirma tu nueva contraseña"
                    IsPassword="True" />
                <Button 
                    x:Name="ToggleConfirmPasswordButton"
                    Text="●"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray600}"
                    FontSize="18"
                    HorizontalOptions="End"
                    WidthRequest="40"
                    HeightRequest="40"
                    Clicked="OnToggleConfirmPasswordClicked"
                    Margin="0,0,8,0"
                    Padding="0"
                    Opacity="0.7" />
            </Grid>

            <!-- Error Message -->
            <Label 
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Change Password Button -->
            <Button 
                x:Name="ChangePasswordButton"
                Text="Cambiar Contraseña"
                Clicked="OnChangePasswordClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"
                HeightRequest="50" />

            <!-- Back Button (Solo visible si NO es contraseña temporal) -->
            <Button 
                x:Name="BackButton"
                Text="Regresar"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                Margin="0,10,0,0"
                IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

