<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.ResetPasswordPage"
             Title="Restablecer Contraseña">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30" Spacing="20">
            
            <!-- Header -->
            <Label 
                Text="Restablecer Contraseña"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <Label 
                Text="Ingresa tu nueva contraseña"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Gray"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,30" />

            <!-- Email Entry -->
            <Label Text="Email" FontSize="14" FontAttributes="Bold" />
            <Entry 
                x:Name="EmailEntry"
                Placeholder="tu@email.com"
                Keyboard="Email" />

            <!-- Token Entry (si no viene del link) -->
            <Label Text="Token de recuperación (opcional si vienes del enlace del email)" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry 
                x:Name="TokenEntry"
                Placeholder="Pega aquí el token del email (si el enlace no funcionó)"
                IsPassword="False" />

            <!-- New Password Entry -->
            <Label Text="Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry 
                x:Name="NewPasswordEntry"
                Placeholder="Ingresa tu nueva contraseña"
                IsPassword="True" />

            <!-- Confirm Password Entry -->
            <Label Text="Confirmar Nueva Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry 
                x:Name="ConfirmPasswordEntry"
                Placeholder="Confirma tu nueva contraseña"
                IsPassword="True" />

            <!-- Error Message -->
            <Label 
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Success Message -->
            <Label 
                x:Name="SuccessLabel"
                TextColor="Green"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Reset Password Button -->
            <Button 
                x:Name="ResetPasswordButton"
                Text="Restablecer Contraseña"
                Clicked="OnResetPasswordClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"
                HeightRequest="50" />

            <!-- Back to Login -->
            <Button 
                x:Name="BackToLoginButton"
                Text="Volver al inicio de sesión"
                Clicked="OnBackToLoginClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

