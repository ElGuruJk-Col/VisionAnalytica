<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.ForgotPasswordPage"
             Title="Recuperar Contraseña">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30" Spacing="20">
            
            <!-- Header -->
            <Label 
                Text="¿Olvidaste tu contraseña?"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <Label 
                Text="Ingresa tu email y te enviaremos un enlace para restablecer tu contraseña"
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Gray"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,30" />

            <!-- Email Entry -->
            <Label Text="Email" FontSize="14" FontAttributes="Bold" />
            <Entry 
                x:Name="EmailEntry"
                Placeholder="tu@email.com"
                Keyboard="Email" />

            <!-- Error Message -->
            <Label 
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Success Message -->
            <Label 
                x:Name="SuccessLabel"
                TextColor="Green"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Send Button -->
            <Button 
                x:Name="SendButton"
                Text="Enviar enlace de recuperación"
                Clicked="OnSendClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"
                HeightRequest="50" />

            <!-- Back to Login -->
            <Button 
                x:Name="BackToLoginButton"
                Text="Volver al inicio de sesión"
                Clicked="OnBackToLoginClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

