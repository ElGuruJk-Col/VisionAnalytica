<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.AdminDashboardPage"
             Title="Dashboard Administrativo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Resumen de Organización"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}" />

            <!-- Stats Cards -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Border Grid.Column="0" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource Primary}" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Total Inspecciones" TextColor="White" FontSize="12"/>
                        <Label x:Name="TotalInspectionsLabel" Text="0" TextColor="White" FontSize="24" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
                
                <Border Grid.Column="1" StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource Secondary}" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Hallazgos Críticos" TextColor="White" FontSize="12"/>
                        <Label x:Name="CriticalFindingsLabel" Text="0" TextColor="White" FontSize="24" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Label Text="Acciones Rápidas" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <Button Text="Ver Historial Completo"
                    Clicked="OnViewHistoryClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="8"/>

            <!-- Recent Activity -->
            <Label Text="Actividad Reciente" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <CollectionView x:Name="RecentActivityCollection" HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="Gray" StrokeThickness="0.5" StrokeShape="RoundRectangle 8" Padding="10" Margin="0,0,0,10">
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding CompanyName}" FontAttributes="Bold"/>
                                    <Label Text="{Binding InspectorName}" FontSize="12" TextColor="Gray"/>
                                    <Label Text="{Binding Date}" FontSize="10" TextColor="Gray"/>
                                </VerticalStackLayout>
                                <Label Grid.Column="1" Text="{Binding Status}" TextColor="{StaticResource Primary}" VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
