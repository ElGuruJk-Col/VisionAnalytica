<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioAnalytica.App.Risk.Pages.LoginPage"
             Title="Iniciar Sesión">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,30" Spacing="20">
            
            <!-- Logo/Header -->
            <Label 
                Text="VisioAnalytica Risk"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <Label 
                Text="Análisis de Riesgos con IA"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="Gray"
                Margin="0,0,0,40" />

            <!-- Email Entry -->
            <Label Text="Email" FontSize="14" FontAttributes="Bold" />
            <Entry 
                x:Name="EmailEntry"
                Placeholder="tu@email.com"
                Keyboard="Email"
                Text="{Binding Email}" />

            <!-- Password Entry -->
            <Label Text="Contraseña" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            <Grid>
                <Entry 
                    x:Name="PasswordEntry"
                    Placeholder="Ingresa tu contraseña"
                    IsPassword="True"
                    Text="{Binding Password}" />
                <Button x:Name="TogglePasswordButton"
                        Clicked="OnTogglePasswordClicked"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Gray600}"
                        FontSize="18"
                        HorizontalOptions="End"
                        WidthRequest="40"
                        HeightRequest="40"
                        Margin="0,0,8,0"
                        Padding="0"
                        Opacity="0.7"
                        Text="●" />
            </Grid>

            <!-- Error Message -->
            <Label 
                x:Name="ErrorLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Loading Indicator -->
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Margin="0,10,0,0" />

            <!-- Login Button -->
            <Button 
                x:Name="LoginButton"
                Text="Iniciar Sesión"
                Clicked="OnLoginClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"
                HeightRequest="50" />

            <!-- Forgot Password Link -->
            <Button 
                x:Name="ForgotPasswordButton"
                Text="¿Olvidaste tu contraseña?"
                Clicked="OnForgotPasswordClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                FontSize="14"
                Margin="0,10,0,0" />

            <!-- Register Button (Oculto - Solo para uso futuro desde web app) -->
            <Button 
                x:Name="RegisterButton"
                Text="¿No tienes cuenta? Regístrate"
                Clicked="OnRegisterClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                Margin="0,10,0,0"
                IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

