<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VisioAnalytica.App.Risk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VisioAnalytica.App.Risk"
    xmlns:pages="clr-namespace:VisioAnalytica.App.Risk.Pages"
    Title="VisioAnalytica Risk"
    FlyoutBehavior="Flyout">

    <!-- Flyout Menu -->
    <Shell.FlyoutContent>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label 
                Text="VisioAnalytica Risk"
                FontSize="24"
                FontAttributes="Bold"
                Margin="0,10,0,20" />
            
            <!-- Opciones cuando NO está autenticado -->
            <VerticalStackLayout x:Name="UnauthenticatedMenu" Spacing="10">
                <Button 
                    Text="Iniciar Sesión"
                    Clicked="OnLoginMenuClicked"
                    BackgroundColor="Transparent"
                    TextColor="#512BD4"
                    HorizontalOptions="Start"
                    Padding="0" />
                <Button 
                    Text="Registrarse"
                    Clicked="OnRegisterMenuClicked"
                    BackgroundColor="Transparent"
                    TextColor="#512BD4"
                    HorizontalOptions="Start"
                    Padding="0" />
                <Button 
                    Text="Recuperar Contraseña"
                    Clicked="OnForgotPasswordMenuClicked"
                    BackgroundColor="Transparent"
                    TextColor="#512BD4"
                    HorizontalOptions="Start"
                    Padding="0" />
            </VerticalStackLayout>
            
            <!-- Opciones cuando SÍ está autenticado -->
            <VerticalStackLayout x:Name="AuthenticatedMenu" Spacing="10" IsVisible="False">
                <Label 
                    x:Name="UserEmailLabel"
                    Text="Usuario"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,0,0,10" />
                <Button 
                    Text="Cerrar Sesión"
                    Clicked="OnLogoutMenuClicked"
                    BackgroundColor="Transparent"
                    TextColor="Red"
                    HorizontalOptions="Start"
                    Padding="0" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Shell.FlyoutContent>

    <!-- Login Page (Initial) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <!-- Main Pages (After Login) -->
    <TabBar Route="MainPage">
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="home.png" />

        <ShellContent
            Title="Capturar"
            ContentTemplate="{DataTemplate pages:CapturePage}"
            Route="CapturePage"
            Icon="camera.png" />

        <ShellContent
            Title="Historial"
            ContentTemplate="{DataTemplate pages:HistoryPage}"
            Route="HistoryPage"
            Icon="history.png" />
    </TabBar>

    <!-- Register Page -->
    <ShellContent
        Title="Registro"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />

    <!-- Forgot Password Page -->
    <ShellContent
        Title="Recuperar Contraseña"
        ContentTemplate="{DataTemplate pages:ForgotPasswordPage}"
        Route="ForgotPasswordPage" />

    <!-- Change Password Page -->
    <ShellContent
        Title="Cambiar Contraseña"
        ContentTemplate="{DataTemplate pages:ChangePasswordPage}"
        Route="ChangePasswordPage" />

    <!-- Results Page -->
    <ShellContent
        Title="Resultados"
        ContentTemplate="{DataTemplate pages:ResultsPage}"
        Route="ResultsPage" />

</Shell>
